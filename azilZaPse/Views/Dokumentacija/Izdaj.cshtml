@model azilZaPse.Models.DodajDokumentacijuBO

@{
    ViewBag.Title = "Izdaj";
}

<html>
<body>
    <div class="tekst">
        <form class="form-horizontal" action="@Url.Action("Izdaj", "Dokumentacija")" method="post">

            <fieldset>

                <!-- Form Name -->
                <legend>Izdavanje dokumentacije</legend>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="numberinput">JMBG:</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.vlasnik.IdVlasnika, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.vlasnik.IdVlasnika, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="numberinput">ID čipa:</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.dokumentacija.IdCipa, new SelectList(ViewBag.Kuce, "idCipa", "idCipa"), "Selektujte kuče", new { @class = "form-control" }) @*pokazuje samo pse u azilu*@
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="numberinput">Ime vlasnika:</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.vlasnik.ImeVlasnika, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.vlasnik.ImeVlasnika, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="numberinput">Prezime vlasnika:</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.vlasnik.PrezimeVlasnika, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.vlasnik.PrezimeVlasnika, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="numberinput">Adresa:</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.vlasnik.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.vlasnik.Adresa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-3 control-label text-center" for="singlebutton"></label>
                    <div class="col-md-3">
                        <button id="singlebutton" name="singlebutton" class="btn btn-primary">Izdajte dokumentaciju</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" id="back" name="back" class="btn" onclick="location.href='@Url.Action("Index", "Radna")'">Nazad na glavnu stranicu</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</body>
</html>

<style>
    .tekst {
        width: 50%;
        margin-left: 25%;
        margin-top: 20px;
    }

    legend {
        width: auto;
        margin: 0 auto;
        color: white;
        margin-bottom: 20px;
    }

    .selekt{
        width: 100%;
        height: 100%;
        margin-top:7px;
    }
</style>
