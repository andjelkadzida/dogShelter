@model azilZaPse.Models.KorisnikBO

@{
    ViewBag.Title = "Register";
}

<h2>Registracija</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="KorisnickoIme" class="form-group">Korisničko ime:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KorisnickoIme, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label for="Email" class="form-group">E-mail:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label for="Sifra" class="form-group">Šifra:</label>
            <div class="col-md-10"> 
                @Html.PasswordFor(model => model.Sifra, new { @class = "form-control", required = "true" })
                @Html.ValidationMessageFor(model => model.Sifra, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrujte se" class="login_btn" />
            </div>
        </div>
    </div>
}
