@model azilZaPse.Models.KorisnikBO

@{
    ViewBag.Title = "Ulogujte se";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Ulogujte se</h3>
                <div />
                <div class="card-body">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <label for="KorisnickoIme" class="form-group">Korisničko ime:</label>
                        </div>
                        @Html.EditorFor(model => model.KorisnickoIme, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            <label for="Sifra" class="form-group">Šifra:</label>
                        </div>
                        @Html.PasswordFor(model => model.Sifra,  new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Sifra, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ulogujte se" class="btn float-right login_btn" />
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Nemate  nalog?<a href="#">Registrujte se!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    }

